<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Ảnh đại diện -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/image2"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_border"/>

        <Button
            android:id="@+id/btn_change_profile_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thay Đổi Ảnh Đại Diện"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:onClick="onChangeProfilePicture" />

        <!-- Tiêu đề và EditText cho các thông tin cá nhân -->
        <TextView
            android:id="@+id/tv_name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Sinh Viên:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nguyễn Văn A"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/border_style"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_dob_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày Sinh:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/et_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="01/01/2000"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/border_style"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_gender_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giới Tính:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/et_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nam"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/border_style"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_address_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa Chỉ:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="123 Đường ABC, TP. HCM"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/border_style"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_phone_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số Điện Thoại:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0123456789"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/border_style"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_email_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nguyenvana@gmail.com"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/border_style"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_student_id_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã Sinh Viên:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/et_student_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="123456789"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/border_style"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_major_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chuyên Ngành:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/et_major"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Công Nghệ Thông Tin"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/border_style"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_class_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lớp Học:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/et_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CNTT-K15"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/border_style"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
</ScrollView>
