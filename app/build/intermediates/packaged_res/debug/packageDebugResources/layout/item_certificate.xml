<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:background="@drawable/custom_shape"
    android:layout_margin="5dp"
    android:padding="10dp">

    <TextView
        android:textColor="@color/bluenhealthcare"
        android:id="@+id/tvCertificateName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Certificate Name"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="10sp"
        android:textColor="@color/bluenhealthcare"
        android:id="@+id/tvCertificateId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Certificate Id"
        android:textSize="20sp" />

    <!-- Layout chứa các nút xóa và sửa -->
    <LinearLayout

        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/btn_edit_certificate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/pen"
            android:contentDescription="Edit"
            android:layout_marginEnd="16dp" />
        <ImageView
            android:id="@+id/btn_delete_certificate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/thungrat"
            android:contentDescription="Delete" />

    </LinearLayout>

</LinearLayout>
