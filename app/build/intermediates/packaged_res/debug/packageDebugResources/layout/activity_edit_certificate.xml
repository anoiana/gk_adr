<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/blue"
    android:orientation="vertical"
    android:gravity="start|top"
    android:scrollbars="vertical">
    <LinearLayout
        android:background="@drawable/rounded_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:padding="20sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:background="#EE4E4E"
            android:text="Sửa Thông tin Chứng chỉ"
            android:textSize="24sp"
            android:textStyle="bold" />
        <LinearLayout
            android:padding="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <!-- Tên Chứng chỉ -->
            <EditText
                android:id="@+id/editTextCertificateName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Certificate Name"
                android:inputType="text" />
            <!-- Ngày cấp chứng chỉ -->
            <EditText
                android:id="@+id/editTextIssueDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Issue Date (dd/mm/yyyy)"
                android:inputType="date" />
            <!-- Cơ quan cấp chứng chỉ -->
            <EditText
                android:id="@+id/editTextIssuer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Issuer"
                android:inputType="text" />
            <!-- Nút lưu chứng chỉ -->
            <Button
                android:id="@+id/buttonUpdateCertificate"
                android:backgroundTint="@color/darkblue"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Certificate"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

