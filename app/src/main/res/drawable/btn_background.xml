<!-- res/drawable/button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi nhấn vào -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/buttonPressedColor"/>
            <corners android:radius="12dp"/>
            <padding android:left="16dp" android:top="8dp" android:right="16dp" android:bottom="8dp"/>
        </shape>
    </item>

    <!-- Trạng thái bình thường -->
    <item>
        <shape>
            <gradient
                android:startColor="@color/buttonStartColor"
                android:endColor="@color/buttonEndColor"
                android:angle="90"/>
            <corners android:radius="12dp"/>
            <padding android:left="16dp" android:top="8dp" android:right="16dp" android:bottom="8dp"/>
            <stroke android:width="2dp" android:color="@color/buttonBorderColor"/>
        </shape>
    </item>
</selector>
