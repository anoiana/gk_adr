<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_background"
    android:padding="16dp"
    android:elevation="4dp"
    android:layout_margin="8dp">
    <TextView
        android:id="@+id/tvCertificateName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Certificate Name"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCertificateId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Certificate Id"
        android:textSize="18sp" />

    <!-- Layout chứa các nút xóa và sửa -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_marginTop="8dp">
        <ImageView
            android:id="@+id/btn_edit_certificate"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/pen"
            android:contentDescription="Edit"
            android:layout_marginEnd="16dp" />
        <ImageView
            android:id="@+id/btn_delete_certificate"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/thungrat"
            android:contentDescription="Delete"/>

    </LinearLayout>

</LinearLayout>
