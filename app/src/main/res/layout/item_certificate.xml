<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvCertificateName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Certificate Name"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCertificateId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Certificate Id"
        android:textSize="14sp" />

    <!-- Layout chứa các nút xóa và sửa -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/btn_edit_certificate"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_edit_24"
            android:contentDescription="Edit"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/btn_delete_certificate"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_delete_24"
            android:contentDescription="Delete" />

    </LinearLayout>

</LinearLayout>
