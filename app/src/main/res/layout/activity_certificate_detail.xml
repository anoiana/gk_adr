<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/blue"
    android:orientation="vertical"
    android:gravity="start|top"
    android:scrollbars="vertical">
    <LinearLayout
        android:background="@drawable/rounded_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:padding="20sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:background="#EE4E4E"
            android:text="Thông tin Chứng chỉ"
            android:textSize="24sp"
            android:textStyle="bold" />
        <LinearLayout
            android:padding="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
    <!-- Các TextView cho các thông tin cơ bản của certificate -->
    <TextView
        android:id="@+id/tvCertificateId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Certificate ID"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvCertificateName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Certificate Name"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvIssueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Issue Date"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvIssuer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Issuer"
        android:textSize="20sp" />
    <!-- TextView để hiển thị danh sách studentIds -->
    <TextView
        android:id="@+id/tvStudentIds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Students"
        android:textSize="20sp" />

    <!-- Button Trở về -->
    <Button
        android:id="@+id/btnBack"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/darkblue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trở về"
        android:layout_marginTop="16dp" />
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
