<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F5F5F5">
    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#51A7BF"
        android:orientation="horizontal">
        <TextView
            android:textColor="#000000"
            android:id="@+id/tv_user_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin cá nhân"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/buttonLogout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/baseline_logout_24"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- Thêm ScrollView để cuộn nội dung -->
    <ScrollView
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Nội dung chính -->
        <LinearLayout
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/bluewith"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:orientation="vertical">
            <!-- Ảnh đại diện -->
            <TextView
                android:textColor="#000000"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin cá nhân"
                android:textSize="20sp"
                android:textStyle="bold" />
            <FrameLayout
                android:layout_margin="20sp"
                android:layout_width="170sp"
                android:layout_height="170sp"
                android:background="@drawable/circle_background"
                android:layout_gravity="center">
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:cardCornerRadius="75dp"
                app:cardElevation="0dp"
                android:clipChildren="true"
                android:clipToPadding="true">
                <!-- ImageView chính -->
                <ImageView
                    android:id="@+id/imageViewProfilePicture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_placeholder" />
            </androidx.cardview.widget.CardView>
            <ImageView
                android:id="@+id/imageViewEditProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|end"
                android:layout_marginTop="-20dp"
                android:padding="8dp"
                android:src="@drawable/pen"/>
            <!-- Icon cây bút -->
            </FrameLayout>
            <!-- Tên người dùng -->
            <LinearLayout
                android:layout_marginTop="10sp"
                android:elevation="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_background"
                android:padding="8dp"
                android:gravity="center_vertical">
                <!-- Icon bên trái -->
                <!-- TextView -->
                <ImageView
                    android:id="@+id/iconImageView"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Icon"
                    android:src="@drawable/idcard" />
                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>
            <!-- Tuổi -->
            <LinearLayout
                android:layout_marginTop="10sp"
                android:elevation="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_background"
                android:padding="8dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/agex"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/textViewAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>
            <!-- Số điện thoại -->
            <LinearLayout
                android:layout_marginTop="10sp"
                android:elevation="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_background"
                android:padding="8dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/telephone"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/textViewPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Trạng thái -->
            <LinearLayout
                android:layout_marginTop="10sp"
                android:elevation="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_background"
                android:padding="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/secure"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/textViewStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Vai trò -->
            <LinearLayout
                android:layout_marginTop="10sp"
                android:elevation="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_background"
                android:padding="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/workforce"
                    android:contentDescription="Role Icon"
                    android:layout_marginEnd="8dp" />
                <TextView
                    android:id="@+id/textViewRole"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="20sp"
                android:layout_width="match_parent"
                android:layout_height="3sp"
                android:background="@color/darkblue"/>
            <!-- Lịch sử đăng nhập -->
            <TextView
                android:id="@+id/textViewLoginHistoryLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Login History"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="16dp"/>

            <!-- Danh sách lịch sử đăng nhập -->
            <TextView
                android:textAlignment="center"
                android:id="@+id/textViewLoginHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:text="No login history available."
                android:textSize="16sp"
                android:textColor="#616161"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
