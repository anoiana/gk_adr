<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="start|top"
    android:scrollbars="vertical">

    <!-- Tên sinh viên -->
    <TextView
        android:id="@+id/tv_studentName_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Tuổi sinh viên -->
    <TextView
        android:id="@+id/tv_studentAge_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age: 20"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <!-- Số điện thoại -->
    <TextView
        android:id="@+id/tv_studentPhone_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: 0123456789"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <!-- Giới tính -->
    <TextView
        android:id="@+id/tv_studentGender_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender: Male"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <!-- Email -->
    <TextView
        android:id="@+id/tv_studentEmail_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: example@example.com"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <!-- Địa chỉ -->
    <TextView
        android:id="@+id/tv_studentAddress_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: 123 Main St, City"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <!-- Danh sách chứng chỉ -->
    <TextView
        android:id="@+id/tv_certificates_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Certificates:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <!-- Chứng chỉ (nếu có) -->
    <TextView
        android:id="@+id/tv_studentCertificates_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Certificate 1, Certificate 2"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"/>

    <!-- Nút quay lại -->
    <Button
        android:id="@+id/btn_back_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="16sp"/>

</LinearLayout>
